{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
         {
          "background": "#bd93f9",
          "foreground": "#111111",
          "leading_diamond": "\ue0b6",
          "properties": {
            "display_host": false
          },
          "style": "diamond",
          "template": " {{ if .SSHSession }}\uf817 {{ end }}{{ .UserName }} ",
          "trailing_diamond": "\ue0b0",
          "type": "session"
        },
        {
          "background": "#ff79c6",
          "foreground": "#111111",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "home_icon": "~",
            "style": "folder"
          },
          "style": "powerline",
          "template": " \uf74a {{ path .Path .Location }} ",
          "type": "path"
        },
        {
          "background": "#8be9fd",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffb86c{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff5555{{ end }}",
            "{{ if gt .Ahead 0 }}#bd93f9{{ end }}",
            "{{ if gt .Behind 0 }}#ff79c6{{ end }}"
          ],
          "foreground": "#111111",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#111111{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#111111{{ end }}",
            "{{ if gt .Ahead 0 }}#111111{{ end }}"
          ],
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf7a3"
          },
          "style": "powerline",
          "template": " {{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#ffb86c",
          "foreground": "#111111",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "root_icon": "\uf0ad"
          },
          "style": "powerline",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "background": "#50fa7b",
          "background_templates": [
            "{{ if gt .Code 0 }}#ff5555{{ end }}"
          ],
          "foreground": "#111111",
          "leading_diamond": "<transparent,background>\ue0b0</>",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ if gt .Code 0 }}\uf00d{{ else }}\uf00c{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "segments": [
        {
          "background": "#8be9fd",
          "foreground": "#111111",
          "style": "plain",
          "template": "<#8be9fd,transparent>\ue0b6</> \uf489 {{ .Name }} <transparent,#8be9fd>\ue0b2</>",
          "type": "shell"
        },
                {
          "background": "#6272a4",
          "foreground": "#f8f8f2",
          "style": "powerline",
          "template": "Env Info: {{ .Env.MY_ENV_VAR }}",
          "type": "env_info"
        },
        {
          "background": "#FFDE57",
          "foreground": "#111111",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": true
          },
          "style": "powerline",
          "template": "{{ if .Venv }}{{ .Venv }} \uE235 {{ .Full }} {{ end }}",
          "trailing_diamond": "\ue0b4",
          "type": "python"
        },
        {
          "background": "#1BD760",
          "foreground": "#111111",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "paused_icon": "\uf04c ",
            "playing_icon": "\uf04b "
          },
          "style": "powerline",
          "template": " \uf167 {{ .Icon }}{{ if ne .Status \"stopped\" }}{{ .Artist }} - {{ .Track }}{{ end }} ",
          "type": "ytm"
        },
                {
          "background": "#6272a4",
          "foreground": "#f8f8f2",
          "style": "powerline",
          "template": "Env Info: {{ .Env.MY_ENV_VAR }}",
          "type": "env_info"
        },
        {
          "background": "#ffb86c",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "foreground": "#111111",
          "leading_diamond": "\ue0b2",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "charged_icon": "\ue22f ",
            "charging_icon": "\ue234 ",
            "discharging_icon": "\ue231 "
          },
          "style": "diamond",
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 ",
          "type": "battery"
        },
         {
          "foreground": "#111111",
          "leading_diamond": "\ue0b2",
          "background": "#ff79c6",
           "invert_powerline": true,
          "leading_diamond": "\ue0b2",
          "style": "diamond",
          "template": " {{ .FormattedMs }}s",
          "type": "executiontime"
        },
        {
          "background": "#bd93f9",
          "foreground": "#111111",
          "invert_powerline": true,
          "leading_diamond": "\ue0b2",
          "style": "diamond",
          "template": " {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "\ue0b4",
          "type": "time"
        }
      ],
      "type": "rprompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  
 "transient_prompt": {
    "background": "transparent",
    "foreground": "#111111",
    "template": "<#6272a4,transparent>\ue0b6</><,#6272a4> {{ .Folder }} </><#6272a4,transparent>\ue0b0</> "
  },
  "version": 2
}

